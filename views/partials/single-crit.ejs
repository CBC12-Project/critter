<div class="crit card" id="<%= crit.id %>_crit">
    <div class="divider">
        <a class="crit-handle divider crit-a" href="/profile/<%= user.username%>">
            <img class="crit-pfp" src="<%= user.picture %>?s=26"></img>
            <p class="crit-name crit-a"><%= user.display_name %></p>
            @<%= user.username %>
        </a>
        <span><strong>Â·</strong></span>
        <span class="crit-timeago" datetime="<%= crit.created_on %>"><%= crit.created_on %></span>
    </div>
    <p class="crit-text"><%= crit.message %></p>
    <div class="divider crit-btns">
        <a id="<%= crit.id %>_like" href="/like/<%= crit.id %>"><i class="fas fa-bug"></i><%= crit.likes %></a>
        <a href="/crit/<%= crit.id %>"><i class="far fa-comment"></i><%= crit.replies %></a>
    </div>
</div>
